<%=
  breadcrumbs(
    { 'Administration' => root_path },
    { 'Available Attributes' => available_attributes_path },
    @attribute.name
  )
%>

<%= page_header('Available Attributes', 'View Available Attribute') %>

<table class="ui definition table">
  <tbody>
    <tr>
      <td>Name</td>
      <td><%= @attribute.name %></td>
    </tr>
    <tr>
      <td>Value</td>
      <td><%= @attribute.value %></td>
    </tr>
    <tr>
      <td>Description</td>
      <td><%= @attribute.description %></td>
    </tr>
  </tbody>
</table>

<div class="line-of-buttons">
  <%= button_link_to([:edit, @attribute], class: 'large icon') do -%>
    <%= icon_tag('edit') %>
    Edit
  <%- end -%>

  <%= button_link_to([:audit, @attribute], class: 'large icon') do -%>
    <%= icon_tag('history') %>
    Audit
  <%- end -%>

  <%= delete_button_tag(@attribute, class: 'large') %>
</div>
